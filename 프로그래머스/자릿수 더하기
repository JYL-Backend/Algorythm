import java.util.*;

public class Solution {
    public int solution(int n) {
        String str = String.valueOf(n);
        int answer = 0;
        for(int i=0; i<str.length(); i++){
            char c = str.charAt(i);
            int number = Character.getNumericValue(c);
            answer += number;
        }
        return answer;
    }
}


